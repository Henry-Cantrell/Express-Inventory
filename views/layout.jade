doctype html
html(lang='en')
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet' href='https://fonts.googleapis.com/icon?family=Material+Icons')
    link(rel='stylesheet' href="//use.fontawesome.com/releases/v5.11.1/css/all.css")
    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css", integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z", crossorigin="anonymous")
    script(src="https://code.jquery.com/jquery-3.5.1.slim.min.js", integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj", crossorigin="anonymous")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js", integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV", crossorigin="anonymous")
    link(rel='stylesheet', href='/stylesheets/style.css')

  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.fixed-top
     .container-fluid
      a.navbar-brand(href='/' style='margin-left:35px') Motorcycles and Accessories
     if(currentUser)
      .dropdown
       button#dropdownMenuButton.btn.btn-secondary.dropdown-toggle(style='margin-right:35px' type='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
        | Manage Listings
       .dropdown-menu(aria-labelledby='dropdownMenuButton')
        a.dropdown-item(href='/inventory/motorcycle/create') List Motorcycle
        a.dropdown-item(href='/inventory/gear/create') List Gear
        a.dropdown-item(href='/users/listings') Update Listings
      a.navbar-brand(href='' style='margin-right:35px') Mail
      a.navbar-brand(href=currentUser.cart-url) Cart
      a.navbar-brand(href='/users/logout' method='GET' style='margin-left:35px') Logout
     if(!currentUser)
      a.navbar-brand(href='/users/login' method='GET' style='margin-left:35px') Login
    
    div(class='container-fluid' style='')
      div(class='row')
        div(class='col-sm-2')
          block sidebar
            ul(class='sidebar-nav')
               div(style = 'margin-top:100px')
               div(style = 'margin-bottom:25px')
               form(action="/")
                button.btn.btn-light.btn-circle.btn-xl(type='submit' title='Homepage') 
                 i(class = 'fas fa-home') 
               div(style = 'margin-bottom:25px')
               form(action="/inventory/motorcycles") 
                button.btn.btn-light.btn-circle.btn-xl(type='submit' title='Motorcycles') 
                 i(class = 'fa fa-motorcycle' aria-hidden = "true") 
               div(style = 'margin-bottom:25px')
               form(action="/inventory/gear") 
                button.btn.btn-light.btn-circle.btn-xl(type='submit' title='Gear') 
                 i(class = 'fas fa-tshirt' aria-hidden="true")
               div(style = 'margin-bottom:25px')
               form(action="/inventory/manufacturers")
                button.btn.btn-light.btn-circle.btn-xl(type='submit' title='Motorcycle Manufacturers') 
                 i(class = 'fa fa-industry' aria-hidden="true")
               div(style = 'margin-bottom:25px')
               form(action="/inventory/brands") 
                button.btn.btn-light.btn-circle.btn-xl(type='submit' title='Brands')
                 i(class = 'fas fa-store')

                
        div(class='col-sm-10')
          block content
   

 if errors
   ul
    for error in errors
      li!= error.msg
        
        
        




