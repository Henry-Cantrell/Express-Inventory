doctype html
html(lang='en')
  head
    script(src="https://use.fontawesome.com/637f0e78d6.js")
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css", integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z", crossorigin="anonymous")
    script(src="https://code.jquery.com/jquery-3.5.1.slim.min.js", integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj", crossorigin="anonymous")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js", integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV", crossorigin="anonymous")

    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.fixed-top
     .container-fluid
      a.navbar-brand(href='/' style='margin-left:35px') Motorcycles and Accessories
     if(currentUser)
      .dropdown
       button#dropdownMenuButton.btn.btn-secondary.dropdown-toggle(type='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
        | Manage Listings
       .dropdown-menu(aria-labelledby='dropdownMenuButton')
        a.dropdown-item(href='/inventory/motorcycle/create') List Motorcycle
        a.dropdown-item(href='/inventory/gear/create') List Gear
      a.navbar-brand(href='/users/cart' method='GET' style='margin-left:35px') Cart
      a.navbar-brand(href='' style='margin-left:35px') Mail
      a.navbar-brand(href='/users/logout' method='GET' style='margin-left:35px') Logout
     if(!currentUser)
      a.navbar-brand(href='/users/login' method='GET' style='margin-left:35px') Login
    
    div(class='container-fluid' style='margin-top:20px')
      div(class='row')
        div(class='col-sm-2')
          block sidebar
            ul(class='sidebar-nav')
               div(style = 'margin-top:100px')
               div(style = 'margin-bottom:25px')
                form(action="/")
                 button.btn.btn-warning.btn-circle.btn-xl(type='submit') H
                i.fa-solid.fa-house
               div(style = 'margin-bottom:25px')
               form(action="/inventory/motorcycles") 
                button.btn.btn-warning.btn-circle.btn-xl(type='submit') M
               div(style = 'margin-bottom:25px')
               form(action="/inventory/gear") 
                button.btn.btn-warning.btn-circle.btn-xl(type='submit') G
               div(style = 'margin-bottom:25px')
               form(action="/inventory/manufacturers")
                button.btn.btn-warning.btn-circle.btn-xl(type='submit') MF
               div(style = 'margin-bottom:25px')
               form(action="/inventory/brands") 
                button.btn.btn-warning.btn-circle.btn-xl(type='submit') B

                
        div(class='col-sm-10')
          block content
   

 if errors
   ul
    for error in errors
      li!= error.msg
        
        
        




